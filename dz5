# Задача 28
def step(number, degree):
    if number == -1 or degree == -1:
        return "Нарушено условие"
    if number >> 0 or degree >> 0:
        return number + degree


number = int(input("Введите число а: "))
degree = int(input("Введите число б: "))
print(step(number, degree))
